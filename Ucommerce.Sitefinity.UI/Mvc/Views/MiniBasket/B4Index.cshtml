@using System.Web.Mvc
@using System.Web.Mvc.Html
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@model Ucommerce.Sitefinity.UI.Mvc.ViewModels.MiniBasketRenderingViewModel
@{
    Layout = null;
    var emptyClass = Model.IsEmpty ? null : "display:none;";
    var notEmptyClass = !Model.IsEmpty ? null : "display:none;";
}

@Html.StyleSheet(Url.WidgetContent("~/ResourcePackages/Bootstrap4/assets/dist/css/main.min.css"), "head")

@if (!SystemManager.IsDesignMode)
{
    @Html.Script(Url.Content("~/bundles/ucommerce-js"), "bottom")
}


<div class="js-mini-basket d-sm-none d-md-block" data-refresh-url="@Model.RefreshUrl" data-mini-basket-empty-selector=".js-mini-basket-empty" data-mini-basket-not-empty-selector=".js-mini-basket-not-empty" data-mini-basket-number-of-items-selector=".js-mini-basket-number-of-items" data-mini-basket-total-selector=".js-mini-basket-total">
    <div style="@emptyClass" class="js-mini-basket-empty @emptyClass">
        <div class="float-right float-sm-none navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <div class="alert alert-primary">Your basket is empty</div>
                </li>
            </ul>
        </div>
    </div>

    <div style="@notEmptyClass" class="js-mini-basket-not-empty d-sm-none d-md-block @notEmptyClass">
        <div class="float-right float-sm-none navbar-collapse">
            <ul class="nav navbar-nav">
                <li>
                    <div>
                        <a class="text-black" href="@Model.CartPageUrl">
                            <span>&#128722;</span><span class="js-mini-basket-number-of-items">@Model.NumberOfItems</span>
                        </a>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</div>

