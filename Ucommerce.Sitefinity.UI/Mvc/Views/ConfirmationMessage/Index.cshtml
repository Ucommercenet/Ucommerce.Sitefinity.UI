@using System.Web.Mvc
@using System.Web.Mvc.Html
@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Services;
@model Ucommerce.Sitefinity.UI.Mvc.ViewModels.ConfirmationMessageViewModel
@{
    Layout = null;
}

@if (!SystemManager.IsDesignMode)
{
    @Html.Script(Url.Content("~/bundles/ucommerce-js"), "bottom")
}

<div>
    @if (string.IsNullOrEmpty(Model.Headline))
    {
        Model.Headline = "Thank you for your order";
    }
    <h1>@Model.Headline</h1>
    <br />
    @if (string.IsNullOrEmpty(Model.Message))
    {
        Model.Message = "An order confirmation email has been sent to your email address";
    }
    <p>@Model.Message</p>
</div>